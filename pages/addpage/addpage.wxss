/**index.wxss**/
@import "../../common/lib/weui.wxss";


.wg-all {
  box-sizing: border-box;
  margin-bottom: 160rpx;
}

page {
  background: #f5f5f5;
}

.we-order {
  background: #fff;
  padding: 20rpx;
}

.wg-input {
  display: block;
  width: 100%;
}

.wg-input-images {
  width: 100%;
  height: 180rpx;
  background: red;
}

.wg-buylist-keyword {
  margin-top: 30rpx;
  display: flex;
}

.wg-buylist-keyword-item {
  border: 1px #73cc67 solid;
  padding: 6rpx 30rpx;
  color: #73cc67;
  margin: 5rpx;
  font-size: 25rpx;
  height: 38rpx;
  border-radius: 19px;
  display: inline-block;
}

.wg-buylist-keyword-input {
  border: 1px #a8a8a8 dashed;
  color: #a8a8a8;
  font-size: 25rpx;
  border-radius: 19px;
  width: 140rpx;
  height: 38rpx;
  margin-left: 10rpx;
  padding: 6rpx 15rpx;
}

/*地址*/

page {
  background: #f5f5f5;
  margin-top: 20rpx;
}

.wg-address {
  box-sizing: border-box;
  margin-top: 30rpx;
  width: 100%;
  background: #fff;
  border: 1px #f0f0f0 solid;
  display: flex;
  flex-direction: row;
  align-items: top;
}

.wg-address-ding {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.wg-curaddress {
  width: 70rpx;
  height: 80rpx;
  margin-right: 50rpx;
  display: inline-block;
}

.wg-noslect {
  color: #d4d4d4;
  display: inline-block;
}

.wg-body-text {
  text-align: center;
}

.wg-btns {
  display: flex;
  flex-direction: row;
}

.wg-btns button:first-child {
  background: #2ab713;
}

.wg-save {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px #cecece solid;
  background: #fff;
}

.wg-centerPage-save-btn {
  margin: 20rpx 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2ab713;
  color: #fff;
  border-radius: 5px;
  text-align: center;
  font-size: 14px;
}

.wg-customer {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px #ccc solid;
  border-top: 1px #ccc solid;
  margin-top: 30rpx;
  background: #fff;
}

.wg-customer-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px #ccc solid;
}

.wg-customer-item-img {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}

.wg-customer-item-text {
  display: inline-block;
  font-size: 30rpx;
}

.weui-cells::after{
  border-bottom: none;
}
.weui-cells::before{
  border-top: none;
}
