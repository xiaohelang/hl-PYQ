@import "../../common/infoItem/infoItem.wxss";
page{
  background: #f5f5f5;
}

.area-header{
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
  height: 320rpx;
  background: url('https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=3053559727,844273698&fm=27&gp=0.jpg') no-repeat;
  background-size: 100% 320rpx;
  font-size: 28rpx;
  color: #fff;
  position: relative;
}

.header-text{
  width: 100%;
  overflow: hidden;
  position: absolute;
  left: 0; 
  bottom: 0;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.3)
}

.header-content{
  width: 100%;
  overflow: hidden;
}
.header-content-text{
}

.hl-topBox {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}

.hl-topBox-navbar {
  white-space: nowrap;
  height: 140rpx;
  padding: 10rpx;
  width: 100%;
  background-color: #fff;
}

.hl-topBox-box {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 0 15rpx;
  border-radius: 18rpx;
  box-sizing: content-box;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.hl-topBox-box-img {
  width: 120rpx;
  height: 120rpx;
}
.hl-topBox-box-text{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  color: #fff;
}
.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}

.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

.type-box {
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  border-bottom: 4rpx solid #e64340;
}

