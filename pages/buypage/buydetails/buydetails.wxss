.wg-box-kong{
  width: 100%;
  height: 160rpx;
}
.wg-buylist {
  margin-top: 20rpx;
  border-top: 1px #ccc solid;
  border-bottom: 1px #ccc solid;
  font-size: 25rpx;
  line-height: 35rpx;
  padding: 20rpx;
  background: #fff;
  color: #6b6b6b;
}
.wg-buylist-keyword{
  margin-top: 30rpx;
}

.wg-buylist-keyword-item {
  border: 1px #73cc67 solid;
  padding: 6rpx 30rpx;
  color: #73cc67;
  margin: 5rpx;
  font-size: 25rpx;
  height: 38rpx;
  border-radius: 19px;
  display: inline-block;
}

.wg-buylist-images {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
  overflow: hidden;
}

.wg-buylist-img {
  width: 220rpx;
  margin-right: 16rpx;
  margin-top: 16rpx;
  height: 220rpx;
}

.wg-buylist-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 40rpx;
}

.wg-bottom-right {
  display: flex;
  flex-direction: row;
}

.wg-right-Customer {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}

.wg-Customer-img {
  width: 40rpx;
  height: 40rpx;
}

.wg-right-Collection {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}

.wg-Collection-img {
  width: 40rpx;
  height: 40rpx;
}

.wg-right-up {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}

.wg-up-img {
  width: 40rpx;
  height: 40rpx;
}

/*发布者*/

.wg-publisher {
  margin-top: 20rpx;
  border-top: 1px #ccc solid;
  border-bottom: 1px #ccc solid;
  display: flex;
  flex-direction: column;
}

.wg-publisher-name {
  color: #000;
  line-height: 40rpx;
}
.wg-maybeCust-search-img{
  width: 15rpx;
  height: 15rpx;
  margin-left: 15rpx;
}

.wg-publisher-phone, .wg-publisher-company, .wg-publisher-email {
  padding-right: 30rpx;
  line-height: 35rpx;
}

/*潜在客户*/

.wg-maybeCust {
  margin-top: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.wg-maybeCust-header {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px #ccc solid;
  background: #fff;
  align-items: center;
  font-size: 30rpx;
}

.wg-search-all{
  position: absolute;
  right: 20rpx;
  top: 76rpx;
  border: 1px #ccc solid;
  z-index: 10;
}

.wg-search-all-item{
  padding: 20rpx 60rpx;
  background: #fff;
  border-bottom: 1px #ccc solid;
}

.wg-buy-view {
  border-top: 1px #ccc solid;
  border-bottom: 1px #ccc solid;
}

.wg-userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 5px;
  vertical-align: top;
}

.wg-nameinfo-phone{
  color: #3499e1;
}

.wg-li {
  padding: 0 15px;
  background-color: #fff;
  font-size: 14px;
  color: #606060;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.wg-li .wg-li-in {
  padding: 15px 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  justify-content: space-between;
}

.wg-userinfo-left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.wg-userinfo-right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wg-right-imgs {
  display: flex;
  flex-direction: row;
}

.wg-right-cosimg {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.wg-right-upimg {
  width: 45rpx;
  height: 45rpx;
}

.wg-right-btn {
  margin-top: 10rpx;
  font-size: 24rpx;
  width: 140rpx;
}

.wg-li-in-line {
  border-bottom: 1px #e7e7e7 solid;
}

.wg-li-border {
  border-bottom: 1px #e7e7e7 solid;
}

.wg-userinfo-nameinfo {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  vertical-align: top;
  line-height: 20px;
  justify-content: space-around;
}

