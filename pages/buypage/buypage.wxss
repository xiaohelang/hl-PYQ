/**index.wxss**/
@import "../../common/newsItem/newsItem.wxss";

page {
  background: #f5f5f5;
  color: #ab956e;
}

.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}

.hl-topBox {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}

.hl-topBox-navbar {
  white-space: nowrap;
  height: 140rpx;
  padding: 10rpx;
  width: 100%;
  background-color: #fff;
}

.hl-top-all {
  /* position: fixed;  *//* z-index: 100; */
  left: 0;
  top: 0;
  background: #f5f5f5;
  overflow: hidden;
}

.hl-top {
}

.hl-topBox-box {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 0 15rpx;
  border-radius: 18rpx;
  box-sizing: content-box;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.hl-topBox-box-img {
  width: 120rpx;
  height: 120rpx;
}
.hl-topBox-box-text{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  color: #fff;
}

.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}

.type-box {
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  border-bottom: 4rpx solid #e64340;
}

.wg-buy {
  /* margin-top: 110rpx; */
}

.wg-buylist {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  border: 1px #e8e8e8 solid;
  font-size: 25rpx;
  line-height: 35rpx;
  padding: 20rpx;
  background: #fff;
  color: #ab956e;
}

.wg-buylist-left {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  overflow: hidden;
  margin-right: 14rpx;
}

.wg-buylist-left-img {
  width: 70rpx;
  height: 70rpx;
}

.wg-buylist-right {
  width: 650rpx;
}

.wg-buylist-con {
  margin-top: 12rpx;
}
.wg-buylist-con-in {
  word-break: break-all;
}

.wg-buylist-keyword {
  margin-top: 30rpx;
}

.wg-buylist-keyword-item {
  border: 1px #73cc67 solid;
  padding: 6rpx 30rpx;
  color: #73cc67;
  margin: 5rpx;
  font-size: 25rpx;
  height: 38rpx;
  border-radius: 19px;
  display: inline-block;
}

