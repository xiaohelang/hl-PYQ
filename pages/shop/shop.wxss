@import "../../common/infoItem/infoItem.wxss";

page {
  background: #f5f5f5;
}

.area-header {
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
  height: 320rpx;
  background: url('https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=3053559727,844273698&fm=27&gp=0.jpg') no-repeat;
  background-size: 100% 320rpx;
  font-size: 28rpx;
  color: #fff;
  position: relative;
}

.header-text {
  width: 100%;
  overflow: hidden;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.3);
}

.header-content {
  width: 100%;
  overflow: hidden;
}

.header-content-text {
}

.all-list {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.all-list-li {
  overflow: hidden;
  padding: 5rpx;
  box-sizing: border-box;
  box-shadow: 0 0 16rpx #ab956e;
  border: 1rpx solid #ccc;
  border-radius: 16rpx;
}

.list-li-top {
  width: 100%;
  height: 120rpx;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
  flex-direction: row;
}

.list-li-top-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.list-li-top-text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.list-li-top-name {
  font-size: 34rpx;
}

.list-li-top-address {
  font-size: 26rpx;
}

.list-li-mid {
}

.list-li-mid-text {
  font-size: 28rpx;
  word-break: break-all;
  color: #ab956e;
}

.wg-buylist-images {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
  overflow: hidden;
}

.wg-buylist-box {
  width: 220rpx;
  margin-right: 13rpx;
  margin-top: 16rpx;
  height: 220rpx;
  border: 1px #ccc solid;
}

.wg-buylist-img {
  width: 220rpx;
  margin-right: 13rpx;
  margin-top: 16rpx;
  height: 220rpx;
  border: 1px #ccc solid;
}

.wg-buylist-img:nth-child(3n) {
  margin-right: 0rpx;
}

.list-li-bot {
  margin-top: 16rpx;
}

.list-li-bot-li {
  display: flex;
  flex-direction: row;
}

.list-li-bot-li-num {
  color: #333;
  font-size: 28rpx;
  line-height: 60rpx;
}
